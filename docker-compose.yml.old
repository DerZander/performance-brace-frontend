version: '3.8'

services:
  frontend:
    build: 
      context: . 
      dockerfile: Dockerfile
    container_name: performance-brace-frontend
    ports:
      - "5173:5173"
    environment:
      # Backend API
      - VITE_API_BASE_URL=${VITE_API_BASE_URL:-http://localhost:8080/api}
      
      # GitHub OAuth
      - VITE_GITHUB_CLIENT_ID=${VITE_GITHUB_CLIENT_ID}
      - VITE_GITHUB_REDIRECT_URI=${VITE_GITHUB_REDIRECT_URI:-http://localhost:5173/auth/github/callback}
      
      # Google OAuth
      - VITE_GOOGLE_CLIENT_ID=${VITE_GOOGLE_CLIENT_ID}
      - VITE_GOOGLE_REDIRECT_URI=${VITE_GOOGLE_REDIRECT_URI:-http://localhost:5173/auth/google/callback}
      
      # Facebook OAuth
      - VITE_FACEBOOK_APP_ID=${VITE_FACEBOOK_APP_ID}
      - VITE_FACEBOOK_REDIRECT_URI=${VITE_FACEBOOK_REDIRECT_URI:-http://localhost:5173/auth/facebook/callback}
    volumes:
      - .:/app
      - /app/node_modules
    command: npm run dev -- --host 0.0.0.0
    networks:
      - performance-brace-network
    restart: unless-stopped

networks:
  performance-brace-network:
    driver: bridge
