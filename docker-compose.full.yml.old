version: '3.8'

services:
  frontend:
    build:
      context: .
      dockerfile: Dockerfile
      target: development
    container_name: performance-brace-frontend
    ports:
      - "5173:5173"
    env_file:
      - .env
    volumes:
      - .:/app
      - /app/node_modules
    command: npm run dev -- --host 0.0.0.0
    networks:
      - performance-brace-network
    restart: unless-stopped
    depends_on:
      - backend

  backend:
    # Hier dein Backend Service
    # image: your-backend-image
    container_name: performance-brace-backend
    ports:
      - "8080:8080"
    networks:
      - performance-brace-network
    restart: unless-stopped

networks:
  performance-brace-network:
    driver: bridge
